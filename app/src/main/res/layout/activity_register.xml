<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/page_register"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:id="@+id/student_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/backgrond_main">


                <ImageView
                    android:id="@+id/backButton_register"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/backarrow"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ContentDescription,MissingConstraints" />

                <TextView
                    android:id="@+id/register"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="89dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="100dp"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="#FF597E52"
                    android:textSize="37sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/emailtext"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="88dp"
                    android:layout_marginEnd="224dp"
                    android:gravity="center"
                    android:text="Email Address"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <EditText
                    android:id="@+id/email_login"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_below="@+id/emailtext"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/edittext"
                    tools:ignore="SpeakableTextPresentCheck" />


                <TextView
                    android:id="@+id/passwordtext"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_login"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="205dp"
                    android:layout_marginEnd="270dp"
                    android:gravity="center"
                    android:text="Password"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <EditText
                    android:id="@+id/password_login"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_below="@+id/passwordtext"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edittext"
                    tools:ignore="SpeakableTextPresentCheck" />


                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_login"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="315dp"
                    android:layout_marginEnd="327dp"
                    android:gravity="center"
                    android:text="Level"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <Spinner
                    android:id="@+id/levelSpinner_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/sectionSpinner_register"
                    android:layout_below="@+id/levelText"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="42dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="15dp" />


                <TextView
                    android:id="@+id/sectionText"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_login"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="433dp"
                    android:layout_marginEnd="304dp"
                    android:gravity="center"
                    android:text="Section"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <Spinner
                    android:id="@+id/sectionSpinner_register"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_below="@+id/sectionText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edittext"
                    android:paddingLeft="25dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/idtext"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sectionSpinner_register"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="543dp"
                    android:layout_marginEnd="346dp"
                    android:gravity="center"
                    android:text="ID"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextSizeCheck" />

                <EditText
                    android:id="@+id/collageId_register"
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_below="@+id/idtext"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edittext"
                    tools:ignore="SpeakableTextPresentCheck" />


                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/collageId_register"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/btn_main"
                    android:text="Register"
                    android:textSize="22sp"
                    app:backgroundTint="@null"
                    app:cornerRadius="50dp" />


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>